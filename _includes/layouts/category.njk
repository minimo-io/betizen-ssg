---
layout: layouts/base.njk
---

<section class="pl-2">
    <div class="max-w-6xl mx-auto">
        {%- include "components/bz-carrousel.njk" -%}
    </div>
</section>

<section class="max-w-6xl mx-auto mt-10 px-2 md:px-0">

     <div class="prose prose-sm px-2 md:px-5 max-w-full">
        <h1 class="page-title text-2xl mb-2 mb-md-0">
            {% if gamesFrom %} 
                {{ title }} <span class="badge badge-dark">{{ (collections.games | forCategory( gamesFrom, page.lang )).length }}</span>
            {% else %}
                {{ title }} <span class="badge badge-dark">{{ (collections.games | forLang( page.lang )).length }}</span>
            {% endif %}

        </h1>

        <div id="expandable-content" class="overflow-hidden transition-[max-height] duration-500 ease-in-out" style="max-height: 5rem;">
            {{ content | safe }}
        </div>
        <!-- Button with ID for the script -->
        <button id="toggle-read-more" class="btn btn-light btn-sm btn-minimo-readmore mb-4 mb-md-0 mt-2">
            {{ languages[page.lang].texts.readMore }}
        </button>
    </div>
        

    <div class="md:mt-6">
        
            {% if gamesFrom %} 
                {%- set gamesList = collections.games | forCategory( gamesFrom, page.lang ) -%}
                {%- include "components/games/games-list.njk" -%}
            {%else%}
                <ul class="row pl-3 pl-md-0">
                    {% include "components/games/subcats-carrousel.njk" %}
                    {%- set gamesList = collections.games | forLang( page.lang ) -%}
                    {%- include "components/games/games-list.njk" -%}       
                    </ul>             
            {% endif %}
        
    </div>
</section>
