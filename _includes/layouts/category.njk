---
layout: layouts/base.njk
---

<section class="section games pt-3">
    <div class="container">
        <div class="archive-title mb-0 mb-md-2 pb-0 pb-md-4 clearfix border-0">
            <div class="row align-items-end">
                <div class="col-md-12">
                    <h1 class="page-title mb-2 mb-md-0">
                        {{ title }} <span class="badge badge-dark">{{ (collections.games | forCategory( gamesFrom, page.lang )).length }}</span>
                    </h1>
                    <div
                        class="catalog-description mt-2 ml-1 mb-2 minimo-read-more"
                        style="height: 50px"
                    >
                        {{ content | safe }}
                    </div>
                    <button
                        id="btn-minimo-readmore"
                        data-original-height
                        data-status="off"
                        data-text-more="{{ languages[page.lang].texts.readMore }}"
                        data-text-less="{{ languages[page.lang].texts.readLess }}"
                        class="btn btn-light btn-sm btn-minimo-readmore mb-4 mb-md-0"
                    >
                        {{ languages[page.lang].texts.readMore }}
                    </button>
                </div>
                {# <div class="col-md-4">

                        <!-- Adspace? -->
                        
                </div> #}
            </div>

            {% include "components/games/subcats-carrousel.njk" %}
        </div>

        <div class="theme-cards-holder mt-3" style="border-bottom: 0">
            <ul class="row pl-3 pl-md-0">
                {% if gamesFrom %} {% for game in collections.games | forCategory( gamesFrom, page.lang ) %}

                    <li class="col-6 col-md-3 pl-0 pl-md-1">
                        <div class="theme-card">
                            <div class="theme-card__body">
                                <a class="d-block" href="{{ game.url }}">
                                    <img
                                        width="400"
                                        height="300"
                                        src="{{ metadata.images.games }}{{
                                            game.fileSlug
                                        }}-splash.webp"
                                        class="theme-card__img wp-post-image"
                                        alt="{{ game.data.title | slugify }}"
                                    />
                                </a>
                                <a
                                    class="theme-card__body__overlay btn btn-brand btn-sm"
                                    href="{{ game.url }}"
                                >
                                    Jugar gratis
                                </a>
                                <div class="rtp-content d-none d-md-block">
                                    <p>RTP</p>
                                    <h6>{{ game.data.game.rtp }}</h6>
                                </div>
                            </div>
                            <div class="theme-card__footer">
                                <div class="theme-card__footer__item">
                                    <a
                                        class="theme-card__title mr-1"
                                        href="/juego/analisis-goblin-cave-slot/"
                                    >
                                        {{ game.data.title }}
                                    </a>
                                    <div class="theme-card__info">
                                        <ul class="prod_cats_list">
                                            <li>
                                                <a
                                                    href="{{
                                                        game.data.provider.url
                                                    }}"
                                                    >{{
                                                        game.data.provider.name
                                                    }}</a
                                                >
                                            </li>
                                            <li
                                                style="color: #838e95"
                                                title="Volatilidad"
                                                data-toggle="tooltip"
                                                data-placement="top"
                                            >
                                                <i
                                                    class="fa fa-thermometer-2"
                                                    aria-hidden="true"
                                                ></i>
                                                {{ game.data.game.volatility }}
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="theme-card__footer__item">
                                    <p class="theme-card__price">
                                        <span
                                            class="woocommerce-Price-amount amount"
                                        >
                                            <span
                                                class="woocommerce-Price-currencySymbol"
                                                >#</span
                                            >{{ game.data.game.ranking }}
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %} {%else%}
                    <div class="alert alert-danger d-block w-100">
                        Define a category tag with name "category_{name}" for this
                        category.
                    </div>
                {% endif %}
            </ul>
        </div>
    </div>
</section>
