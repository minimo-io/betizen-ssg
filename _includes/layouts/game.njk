---
layout: layouts/base.njk
---
<section class="section m-0 p-0">
    <div class="container px-1 w-100">
        {%- include "components/bz-carrousel.njk" %}
    </div>
</section>

<section
    class="profile__hero profile__hero_game"
    style="background-image: url({{ metadata.images.games }}{{ page.fileSlug }}-hero.webp);"
    alt="{{ page.fileSlug }} Top Image"
></section>

<section class="section section--pt-0" style="padding: 0">
    <div class="container">
        <div class="profile">
            <div class="row">
                <div class="col-lg-8 mb-2">
                    <div class="d-flex">
                        <div class="profile__avatar">
                            <img
                                src="{{ metadata.images.games }}{{ page.fileSlug }}-logo.webp"
                                class="attachment-square_crop size-square_crop"
                                alt="{{ page.fileSlug }}"
                                width="300"
                                height="300"
                            />
                        </div>
                        <div class="profile__description">
                            <h1 class="profile__description__title">
                                {{ title }}
                            </h1>
                            <p>
                                Creado por <strong><a href="{{ provider.url }}">
                                    {{ provider.name }}</a></strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row">
        <div id="container">
            <div id="content" role="main">
                <div class="row">
                    <div class="col-lg-8 mb-md-0 mb-3">
                        <div
                            id="casino-2102"
                            class="product type-product status-publish has-post-thumbnail product_cat-landing-corporate first casino-single"
                        >
                            <div class="row box-did-u-know">
                                <div class="container-fluid">
                                    <div class="card border-0">
                                        <div class="card-body pb-0 px-0">
                                            
                                            
                                            {% include "components/bz-banner-hero.njk" %}

                                            <div class="container">
                                                <div class="row">
                                                    <button
                                                        id="btn-minimo-readmore"
                                                        data-original-height=""
                                                        data-status="off"
                                                        data-text-more="Leer más"
                                                        data-text-less="Leer menos"
                                                        class="d-none btn btn-light btn-sm btn-minimo-readmore mb-4 mb-md-0"
                                                    >
                                                        Leer más
                                                    </button>
                                                    {# mobile top free play button #}
                                                    <a
                                                        class="mb-2 d-block d-lg-none btn btn-brand btn-block btn-sm btn-customcolor-outline text-center btn-block btn-play-now" style="color:white;"
                                                        >Jugar gratis</a>

                                                </div>
                                                    <div class="d-lg-none">
                                                        <div class="theme-purchases">
                                                            <div class="mt-3 text-center">
                                                                {%- set starSize = "35px" -%}
                                                                {%- set score = game.score -%}
                                                                {% include "components/bz-score.njk" %}
                                                            </div>
                                                        </div>
                                                    </div>                                                
                                            </div>

                                            {%- include "components/games/details-list.njk" -%}

                                            {% if tags.includes("bingo") %}
                                                {%- include "components/games/key-props-bingo.njk" -%}
                                            {% elif tags.includes("roulette") %}
                                                {%- include "components/games/key-props-roulette.njk" -%}
                                            {% elif tags.includes("poker") %}
                                                {%- include "components/games/key-props-poker.njk"-%}
                                            {% elif tags.includes("blackjack") %}
                                                {%- include "components/games/key-props-blackjack.njk"-%}    
                                            {% elif tags.includes("baccarat") %}
                                                {%- include "components/games/key-props-baccarat.njk"-%}                                                                                                                                      
                                            {% else %}
                                                {%- include "components/games/key-props.njk" -%}
                                            {% endif %}

                                            <div class="mb-3 card game-excerpt">
                                                <div class="card-body text-center">
                                                    {{ excerpt or description }}
                                                </div>
                                            </div>
                                            <div class="mt-1 mb-4"></div>
                                            <div class="feature-screenshot">
                                                <div
                                                    data-columns="4"
                                                    style="
                                                        opacity: 1;
                                                        transition: opacity
                                                            0.25s ease-in-out;
                                                        filter: blur(5px);
                                                        -webkit-filter: blur(
                                                            5px
                                                        );
                                                    "
                                                >
                                                    <div style="opacity: 0.5">
                                                        <img
                                                            width="1200"
                                                            height="900"
                                                            src="{{ metadata.images.games }}{{ page.fileSlug }}-splash.webp"
                                                            class="attachment-large_crop size-large_crop"
                                                            alt="{{ title | slugify }}"
                                                        />
                                                    </div>
                                                </div>
                                                <div
                                                    class="game-play-box game-play-box-desktop"
                                                >
                                                    <div
                                                        class="game-play-button-for-real-box"
                                                    >
                                                        <a
                                                            data-micromodal-trigger="modal-1"
                                                            class="game-play-button btn-play-now"
                                                            ><span></span
                                                        ></a>
                                                        <a
                                                            data-micromodal-trigger="modal-1"
                                                            role="button"
                                                            class="btn btn-brand btn-block btn-checkout up btn-customcolor game-play-button-for-free btn-play-now"
                                                        >
                                                            <span
                                                                class="btn-text"
                                                                >Jugar
                                                                gratis</span
                                                            >
                                                        </a>
                                                        <a href="{{ languages[page.lang].promo.url }}"
                                                            rel="nofollow noopener"
                                                            target="_blank"
                                                            role="button"
                                                            class="btn btn-outline-brand btn-block up btn-customcolor-outline game-play-button-for-real"
                                                            data-linkid="4707"
                                                        >
                                                            <span
                                                                class="btn-text"
                                                                ><i
                                                                    class="fa fa-external-link mr-1"
                                                                    aria-hidden="true"
                                                                ></i
                                                                >Jugar de verdad</span
                                                            >
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                {% include "components/games/casino-main-promo.njk" %}

                                                {% include "components/games/top-casinos.njk" %}
                                            </div>
                                            <div class="card-text mt-5 px-2 general-description">
                                                <h2 class="card-title text-truncate ml-1">
                                                    Mas sobre 
                                                    {{ title }}
                                                </h2>                                                
                                                {{ content | safe }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-lg-none">

                                <div
                                    class="theme-description__list d-lg-none mb-4">
                                    {# mobile #}
                                    {%- include "components/games/game-data.njk" -%}
                                </div>
                            </div>

                            <div class="tab-content">
                                {%- include "components/bz-subscribe.njk" -%}
                            </div>
                            <div class="relatedGamesBox col-12 container mt-4 mb-4">
                                {%- include "components/games/other-games.njk" -%}
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-lg-4 d-none d-lg-block pl-xs-0 pl-lg-5 casino-sidebar"
                    >
                        <div class="sidebar-lg">
                            <div class="theme-purchases">
                                <div
                                    class="text-center Xd-flex Xjustify-content-between align-items-center mb-1">
                                    <h2 class="Xd-flex align-items-center">
                                        <span
                                            class="woocommerce-Price-amount amount ranking-big"
                                            ><span
                                                class="woocommerce-Price-currencySymbol"
                                            ></span
                                            >#{{ game.ranking }}</span
                                        ><a
                                            class="knowmore-icon-main"
                                            href="/rankings/"
                                            ><i
                                                class="fa fa-info-circle"
                                                aria-hidden="true"
                                            ></i
                                        ></a>
                                    </h2>
                                </div>
                                <div
                                    class="theme-purchases__item" style="border-top: 0">

                                    {%- set starSize = "font-size: 35px" -%}
                                    {%- set score = game.score -%}
                                    {% include "components/bz-score.njk" %}

                                </div>
                            </div>                                                    
                            <button
                                id="btn-opinion-right"
                                type="button"
                                class="btn btn-brand btn-play-now btn-block btn-checkout up btn-customcolor Xmb-3"
                                data-micromodal-trigger="modal-1"
                            >
                                <span class="btn-text">Jugar gratis</span>
                            </button>
                             

                            <div class="theme-description__list pt-2">
                                {# desktop #}
                                {%- include "components/games/game-data.njk" -%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# modals for games #}
{%- include "components/games/modal.njk" -%}