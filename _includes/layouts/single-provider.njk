---
layout: layouts/base.njk
---

{%- set gamesList = collections.games | reverse | forLang(page.lang) | gamesForProvider(page.url) -%}

<section
    class="profile__hero"
    style="background-image: linear-gradient(to right, {{ color }}, #ffffff)"
></section>
<section class="section section--pt-0" style="padding: 0">
    <div class="container">
        <div class="profile">
            <div class="row">
                <div class="col-lg-8 mb-2">
                    <div class="d-flex">
                        <div class="profile__avatar">
                            <img
                                src="{{ metadata.images.providers }}{{ page.fileSlug }}-logo.webp"
                                class="rounded d-inline-block"
                                alt="logo-proveedor"
                                width="300"
                            />
                        </div>
                        <div class="profile__description">
                            <h1 class="profile__description__title">
                                {{ title }}
                            </h1>
                            <p class="d-none d-sm-block">Desde el {{ founded }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{# Games and Casinos #}
<section class="section pt-1 section-provider">
    <div class="container">
        <div class="archive-title border-0 clearfix pb-0 pb-md-5">
            <div class="row">
                <div class="col-md-8">
                    <div class="catalog-description mt-2 ml-1 minimo-read-more">
                        {{ content | safe }}
                    </div>
                    <div class="tax-btns provider-btns d-inline-block">
                        <button
                            id="btn-minimo-readmore"
                            data-original-height=""
                            data-status="off"
                            data-text-more="Leer más"
                            data-text-less="Leer menos"
                            class="btn btn-light btn-sm btn-minimo-readmore mb-4 mb-md-0"
                        >
                            Leer más
                        </button>
                        <a
                            href="#providersGames"
                            role="button"
                            class="btn btn-dark btn-sm ml-1 mb-2 mb-md-0 mt-md-3 opacity-7"
                        >
                            {{ gamesList | length }} juegos
                        </a>
                        {# <a
                            href="#casinosWithProvider"
                            role="button"
                            class="btn btn-dark btn-sm ml-1 mb-2 mb-md-0 mt-md-3 opacity-7"
                        >
                            25 casinos
                        </a> #}
                    </div>
                    <span
                        class="provider-meta pull-right mt-0 mt-md-4 mb-3 mb-md-0"
                    >
                        <a
                            class="opacity-7 d-inline-block"
                            href="{{ '/proveedores/' | locale_url }}"
                        >
                            <i
                                class="fa fa-reply mr-1"
                                aria-hidden="true"
                            ></i> </a
                        ><span class="d-inline-block">‧</span>
                        
                        {% if site %}
                            <a
                                class="opacity-7"
                                href="{{ site }}"
                                target="_blank"
                                rel="nofollow"
                            >
                                <i class="fa fa-link mr-1" aria-hidden="true"></i
                                >Web
                            </a>
                            ‧
                        {% endif %}

                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        {{ headquarters }}

                    </span>
                </div>
                <div class="col-md-4">
                    <div class="tax-sticky text-center d-none d-md-block">
                        <img
                            src="{{ metadata.images.providers }}{{ page.fileSlug }}-char.webp"
                            class="rounded mb-2"
                            alt="{{ page.fileSlug }}-char.webp"
                            width="200"
                        />
                    </div>
                </div>
            </div>
        </div>

        <div>
            {%- include "components/bz-banner-hero.njk" -%}
        </div>
        <div id="providersGames" class="mt-4">
            <ul class="row pl-3 pl-md-0">
                
                {%- include "components/games/games-list.njk" -%}
            </ul>
        </div>       
    </div>
</section>
