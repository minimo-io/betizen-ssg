---
layout: "layouts/base.njk"
---

{# Hero Section #}
<section class="bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 py-16 mb-8">
    <div class="max-w-6xl mx-auto px-4">
        <div class="text-center max-w-4xl mx-auto">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">
                {{title}}<span class="text-primary">.</span>
            </h1>
            <p class="text-xl md:text-2xl text-base-content/70 leading-relaxed">
                {{ description }}
            </p>
        </div>
    </div>
</section>

{# Blog Posts Section #}
<section class="max-w-6xl mx-auto px-4 pb-16">
    {%- set postsList = collections.posts | forLang( page.lang ) %}
    {% include "components/posts/posts-list.njk" %}
</section>

<style>
    .blog-card {
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    
    .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }
    
    .blog-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }
    
    @media (max-width: 768px) {
        .blog-card-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style>