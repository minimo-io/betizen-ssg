<style>
  .card-bonus:before {
    background-image: url("/assets/imgs/site/bonus-bg-1.webp");
  }
  .btn-customcolor-inverted {
    background-color: {{ gradient.start or "#24262b" }} !important;
    border-color: {{ gradient.start or "#24262b" }} !important;
    color: white !important;
  }
  .btn-customcolor-inverted:hover {
    background-color: white !important;
    color: {{ gradient.end or "#1a1c20" }} !important;
    border-color: {{ gradient.end or "#1a1c20" }} !important;
  }  
</style>

<div class="card card-bonus mb-2 {{ bonusDefaultExtraClasses }}">
  <div class="card-body">
    <h5 class="card-title text-center">
      {{ languages[page.lang].promo.cta }}&nbsp;<a
        href="{{ languages[page.lang].promo.url }}"
        class="knowmore-icon-link text-white"
        ><sup><i class="fa fa-info-circle" aria-hidden="true"></i></sup
      ></a>
    </h5>
    <p class="card-text text-white text-center">
      {{ languages[page.lang].promo.casino.title | safe }}
    </p>
    <a
      rel="noopener nofollow"
      target="_blank"
      role="button"
      href="{{ languages[page.lang].promo.url }}"
      class="btn btn-bonus btn-outline-brand btn-block mb-1 ml-0 btn-customcolor-inverted text-uppercase"
    >
      <i class="fa fa-thumbs-up" aria-hidden="true"></i>
      {{ languages[page.lang].texts.tryBonus }}
    </a>
  </div>
</div>


