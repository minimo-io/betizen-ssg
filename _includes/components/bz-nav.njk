{%- set currentLangClass = languages[page.lang].menu.flagClass %}

{% from "locale-fix.njk" import localeUrlFix with context %}
<nav
    id="nav-header"
    class="navbar navbar-expand-lg bg-white navbar-light fixed-top"
>
    <div class="container">
        <a href="{{ "/" | locale_url }}" lang="{{ page.lang }}" hreflang="{{ page.lang }}" class="navbar-brand zoom">
            <img
                src="/assets/imgs/site/betizen-logo.webp"
                alt="Betizen"
                title="Betizen"
            />
        </a>
        <div class="d-flex Xml-auto">
            <ul class="navbar-nav d-lg-none">
                <li class="nav-item mr-2 animated shake notificationli">
                    <a class="nav-notifications-box" href="/bonos/">
                        <i class="fa fa-bell"></i>
                        <span class="nav-notifications">37</span>
                    </a>
                </li>
            </ul>
            <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#globalNavbar"
                aria-controls="globalNavbar"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="globalNavbar">
            {# mobile menu #}
            <div id="term-id-activity-mobile" class="nav-item d-lg-none">
                <a
                    class="nav-link dropdown-toggle flag-icon-background {{ currentLangClass }}"
                    href="/"
                    data-toggle="dropdown"
                    role="button"
                    aria-haspopup="true"
                    aria-expanded="false"
                    > {{ languages[page.lang].menu.name }}</a
                >
                <div class="dropdown-menu">
                    {% for link in page.url | locale_links %}
                        <a class="{{ languages[link.lang].menu.class }}" href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">
                            {{ languages[link.lang].menu.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <ul class="navbar-nav navbar-main ml-auto order-1">
                {% for item in nav[page.lang] %}
                    {# <li id="term-id-44" class="nav-item">
                        <a href="/{{ item.url }}">{{ item.text }}</a>
                        
                    </li>  #}
                    {%- set hasChildren = not not item.children -%}

                    {% if hasChildren === false %}
                        <li
                            id="{{ item.id }}"
                            class="nav-item nav-item-spread nav-item-lg d-none d-lg-block"
                        >
                            <a class="nav-link" href="{{ item.url }}">{{ item.text }}</a>
                        </li>
                        <li
                            id="{{ item.id }}-mobile"
                            class="nav-item nav-item-mobile d-lg-none"
                        >
                            <a
                                class="mt-1 btn btn-lg mb-1 btn-knowledge btn-knowledge-purple btn-round btn-md-block mt-sm-1"
                                href="{{ item.url }}"
                                >{{ item.text }}</a
                            >
                        </li>
                    {% else %}
                        <li
                            id="{{ item.id }}"
                            class="nav-item nav-item-lg nav-item-spread dropdown d-none d-lg-block">
                            <a
                                class="nav-link dropdown-toggle"
                                href="{{ item.url }}"
                                data-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false"
                                >{{ item.text }}</a
                            >
                            <div class="dropdown-menu">
                                <div class="navbar-collapse navbar-top-collapse">
                                    <ul id="menu-top-menu" class="nav navbar-nav">
                                        {% for subCat in item.children %}
                                            <li
                                                class="menu-item menu-item-type-taxonomy menu-item-object-product_cat"
                                            >
                                                <a
                                                    title
                                                    href="{{ subCat.url }}"
                                                    >{{ subCat.text }}</a
                                                >
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </li>
                        <li
                            id="{{ item.id }}-mobile"
                            class="nav-item nav-item-mobile Xnav-item-spread dropdown d-lg-none mb-3"
                        >
                            <a
                                class="btn btn-lg mt-1 mb-1 btn-knowledge btn-knowledge btn-round btn-md-block mt-sm-1 dropdown-toggle"
                                href="{{ item.url }}"
                                data-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false"
                                >{{ item.text }}</a
                            >
                            <div class="dropdown-menu">
                                <div class="navbar-collapse navbar-top-collapse">
                                    <ul id="menu-top-menu" class="nav navbar-nav">
                                        {% for subCat in item.children %}
                                            <li
                                                class="menu-item menu-item-type-taxonomy menu-item-object-product_cat"
                                            >
                                                <a
                                                    title
                                                    href="{{ subCat.url }}"
                                                    >{{ subCat.text }}</a
                                                >
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </li>
                    {% endif %} 
                {% endfor %}
               



                {# <li
                    id="term-id-74"
                    class="nav-item nav-item-spread nav-item-lg d-none d-lg-block"
                >
                    <a class="nav-link" href="/bonos/"
                        >Bonos<sup class="d-none"
                            ><span
                                class="badge badge-bonus badge-pill badge-danger"
                                >37</span
                            ></sup
                        ></a
                    >
                </li>
                <li
                    id="term-id-74-mobile"
                    class="nav-item nav-item-mobile d-lg-none"
                >
                    <a
                        class="mt-1 btn btn-lg mb-1 btn-knowledge btn-knowledge-purple btn-round btn-md-block mt-sm-1"
                        href="/bonos/"
                        >Bonos</a
                    >
                </li>
                <li
                    id="term-id-5"
                    class="nav-item nav-item-spread nav-item-lg d-none d-lg-block"
                >
                    <a class="nav-link" href="/casinos/">Casinos</a>
                </li>
                <li
                    id="term-id-5-mobile"
                    class="nav-item nav-item-mobile d-lg-none"
                >
                    <a
                        class="mt-1 btn btn-lg mb-1 btn-knowledge btn-knowledge-purple btn-round btn-md-block mt-sm-1"
                        href="/casinos/"
                        >Casinos</a
                    >
                </li> #}
                <li
                    id="term-id-activity"
                    class="nav-item nav-item-spread nav-item-lg d-none d-lg-block dropdown">

                    <a
                        class="nav-link dropdown-toggle flag-icon-background {{ currentLangClass }}"
                        href="/"
                        data-toggle="dropdown"
                        role="button"
                        aria-haspopup="true"
                        aria-expanded="false"
                        >{{ languages[page.lang].menu.name }}</a
                    >
                    <div class="dropdown-menu">
                        {{ localeUrlFix(fixLang="es") }}
                        {{ localeUrlFix(fixLang="pt-br") }}
                        {{ localeUrlFix(fixLang="en") }}
                    </div>
                </li>
                <li
                    class="d-none d-md-block nav-item mr-2 animated shake notificationli"
                >
                    <a class="nav-notifications-box" href="/bonos/">
                        <i class="fa fa-bell"></i>
                        <span class="nav-notifications">37</span>
                    </a>
                </li>
                <li class="d-lg-none nav-item nav-item-lg"></li>
            </ul>
        </div>
    </div>
</nav>
