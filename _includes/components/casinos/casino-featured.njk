<div class="container casino-featured casino-single-featured">
  <div class="row">
    <div class="col-6 col-sm">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title text-truncate">{{ languages[page.lang].texts.maxWithdrawal }}</h5>
          <p class="card-text display-4" xstyle="line-height:58px;">
            {{ maxWidthdrawal }}
          </p>
        </div>
      </div>
    </div>
    <div class="col-6 col-sm">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title text-truncate">{{ languages[page.lang].texts.minDeposit }}</h5>
          <p class="card-text display-4">{{ minDeposit }}</p>
        </div>
      </div>
    </div>
    <div class="col-6 col-sm mt-3 mt-sm-0">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title text-truncate">{{ languages[page.lang].texts.minWithdrawal }}</h5>
          <p class="card-text display-4">{{ minWidthdrawal }}</p>
        </div>
      </div>
    </div>
    <div class="col-6 col-sm-12 mt-sm-0">
      <div class="card mt-3 mt-md-3">
        <a href="#licenses">
          <div class="card-body text-center">
            <h5 class="card-title text-truncate">{{ languages[page.lang].texts.license }}</h5>
            <p class="card-text display-4 text-truncate">
              <span class="licensesColorDot"
                ><span class="badge badge-success badge-pill"
                  >&nbsp;</span
                ></span
              >{{ license }}
            </p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
