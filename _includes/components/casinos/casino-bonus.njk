{%- if not backgroundImage -%}
<style>
    {%- set backgroundImage -%}{{ metadata.images.site }}bonus-bg-1.webp{%- endset -%}

    {%- if bonus.image -%}
      {%- set customBonusImage -%}{{ metadata.images.bonuses }}{{ bonus.image }}{%- endset -%}
    {%- endif -%}
    .card-bonus:before {
      background-image: url("{{ customBonusImage or backgroundImage }}");
    }
    .btn-customcolor-inverted {
      background-color: {{ gradient.start or "#59003d" }} !important;
      border-color: {{ gradient.start or "#59003d" }} !important;
      color: white !important;
    }
    .btn-customcolor-inverted:hover {
      background-color: white !important;
      color: {{ gradient.end or '#9d0037' }} !important;
      border-color: {{ gradient.end or '#9d0037' }} !important;
    } 
</style>
{%- endif -%}


{%- if not bonus.noHtmlImage -%}
<div class="card card-bonus mb-3">
  <div class="card-body">
    <h5 class="card-title text-center">
     {{ bonus.title or title }}&nbsp;<a
        href="{{ bonus.link }}"
        class="knowmore-icon-link text-white"
        ><sup><i class="fa fa-info-circle" aria-hidden="true"></i></sup
      ></a>
    </h5>
    <p class="card-text text-white text-center">
      {{ bonus.text or description }}
    </p>
    <a
      rel="noopener nofollow"
      target="_blank"
      role="button"
      href="{{ bonus.link }}"
      class="btn btn-bonus btn-outline-brand btn-block mb-1 ml-0 btn-customcolor-inverted text-uppercase"
    >
      <i class="fa fa-thumbs-up" aria-hidden="true"></i>
      {{ languages[page.lang].texts.tryBonus }}
    </a>
  </div>
</div>
{% else %}
  <a target="_blank" href="{{ bonus.link }}" rel="noopener nofollow">
    <img class="rounded-xl animated pulse infinite" src="{{ metadata.images.casinos }}{{bonus.noHtmlImage}}" alt="{{ page.fileSlug }}-bonus" />
  </a>
{%- endif -%}
