<style>
  .card-bonus:before {
    background-image: url("/assets/imgs/site/bonus-bg-1.webp");
  }
  .btn-customcolor-inverted {
    background-color: {{ gradient.start }} !important;
    border-color: {{ gradient.start }} !important;
    color: white !important;
  }
  .btn-customcolor-inverted:hover {
    background-color: white !important;
    color: {{ gradient.end }} !important;
    border-color: {{ gradient.end }} !important;
  }
</style>

<div class="card card-bonus mb-3">
  <div class="card-body">
    <h5 class="card-title text-center">
      {{ bonus.title }}&nbsp;<a
        href="{{ bonus.link }}"
        class="knowmore-icon-link text-white"
        ><sup><i class="fa fa-info-circle" aria-hidden="true"></i></sup
      ></a>
    </h5>
    <p class="card-text text-white text-center">
      {{ bonus.text }}
    </p>
    <a
      rel="noopener nofollow"
      target="_blank"
      role="button"
      href="{{ bonus.link }}"
      class="btn btn-bonus btn-outline-brand btn-block mb-1 ml-0 btn-customcolor-inverted text-uppercase"
    >
      <i class="fa fa-thumbs-up" aria-hidden="true"></i>
      {{ languages[page.lang].texts.tryBonus }}
    </a>
  </div>
</div>
