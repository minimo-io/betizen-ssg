{%- css %}
.featured-casino-row {
    background: linear-gradient(135deg, #ffd700 0%, #ffed4e 50%, #ffd700 100%) !important;
    {# border: 3px solid #ffb300 !important; #}
    box-shadow: 0 4px 20px rgba(255, 215, 0, 0.4) !important;
