{# Blacklist button #}
<div class="flex flex-col md:flex-row mb-4 px-3 gap-2 border-b border-base-200 dark:border-gray-700 pb-2 md:pb-2 md:items-center md:justify-between">

    {# Filter buttons #}
    <div class="flex items-center gap-2">
        {# Main filter button #}
        <div class="dropdown dropdown-start">
            <div tabindex="0" role="button" class="btn btn-sm btn-primary btn-soft md:btn-md m-1 ">
                <i data-lucide="trending-up" strokeWidth={1} class="h-4"></i>
                {{ languages[page.lang].texts.orderMostVoted }}
                 <i data-lucide="chevron-down" strokeWidth={1} class="h-4"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-lg gap-2">
                {# New #}
                <li>
                    <button onclick="alert('{{languages[page.lang].texts.soon }}')" class="btn btn-primary btn-soft btn-sm md:btn-md">
                        <i data-lucide="badge-plus" strokeWidth={1} class="h-4"></i>
                        {{ languages[page.lang].texts.orderNewer }}
                    </button>                
                </li>
                {# Licensed#}            
                <li>
                    <button onclick="alert('{{languages[page.lang].texts.soon }}')" class="btn btn-primary btn-soft btn-sm md:btn-md">
                        <i data-lucide="shield" strokeWidth={1} class="h-4"></i>
                        {{ languages[page.lang].texts.orderLicensed }}
                    </button>                  
                </li>                
                {# Alphabetical #}            
                <li>
                    <button onclick="alert('{{languages[page.lang].texts.soon }}')" class="btn btn-primary btn-soft btn-sm md:btn-md">
                        <i data-lucide="list-ordered" strokeWidth={1} class="h-4"></i>
                        {{ languages[page.lang].texts.orderAlphabetical }}
                    </button>                  
                </li>
                {# Shutdown #}            
                <li>
                    <button onclick="alert('{{languages[page.lang].texts.soon }}')" class="btn btn-primary btn-soft btn-sm md:btn-md">
                        <i data-lucide="x-circle" strokeWidth={1} class="h-4"></i>
                        {{ languages[page.lang].texts.orderShutdown }}
                    </button>                  
                </li>                
            </ul>
        </div>    

        {# Blacklisted #}
        <a href="{{ '/casinos/blacklisted/' | locale_url }}" class="btn btn-error btn-soft btn-sm md:btn-md">
            <i data-lucide="skull" strokeWidth={1} class="h-4"></i>
             {{ languages[page.lang].texts.orderBlacklisted }}
        </a>
    </div>

    {# Search field #}
    <div class="relative w-full md:w-auto">
        <input 
            type="text" 
            placeholder="{{ languages[page.lang].texts.search or 'Search...' }}" 
            class="input input-bordered input-sm md:input-md w-full md:w-64 pr-10"
            id="casino-search"
        />
        <i data-lucide="search" strokeWidth={1} class="h-4 absolute right-3 top-1/2 transform -translate-y-1/2 text-base-content/50"></i>
    </div>
 
</div>