{% macro localeUrlFix(fixLang="es") %}
    {%- for link in page.url | locale_links %}
        {% if link.lang == fixLang %} 
            <a
                class="dropdown-item flag-icon-background {{ languages[link.lang].menu.flagClass }}"
                href='{{ link.url }}'
                >{{ languages[link.lang].menu.name }}</a>
        {%endif%}
    {%- endfor %}
{%endmacro%}

{% macro localeUrlFixDaisy(fixLang) %}
    <li>
        <a class="{{ languages[fixLang].menu.class }} text-base-content/80 flex items-center gap-2 font-bold">
            {% if languages[fixLang].menu.flagClass == "flag-icon-es" %}
                <img src="/assets/imgs/flags/svg/ar.svg" class="h-6 w-6 object-cover" alt="es-flag" />
            {% elif languages[fixLang].menu.flagClass == "flag-icon-br"  %}
                <img src="/assets/imgs/flags/svg/br.svg" class="h-6 w-6 object-cover" alt="br-flag" />
            {% else %}
                <img src="/assets/imgs/flags/svg/gb.svg" class="h-6 w-6 object-cover" alt="gb-flag" />
            {% endif %}

            {{ languages[fixLang].menu.name }}
        </a>
    </li>
{%endmacro%}