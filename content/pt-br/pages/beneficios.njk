layout: "layouts/base.njk"
permalink: "/pt-br/beneficios/"
---

<div class="max-w-6xl mx-auto">
    <!-- Header with Casino Review Style -->
    <div class="rounded-xl shadow-lg mb-8">
        <!-- Background & Logo -->
        <div 
          style="background-image: linear-gradient(to right, #4f46e5, #7c3aed)"
          class="bg-red-200 h-20 relative rounded-t-lg">
            
            <!-- Back tag -->
            <div class="absolute top-4 right-6">
                <a href="{{ '/' | locale_url }}" class="bg-gray-600 text-white text-xs px-3 py-1 rounded">
                    Home
                </a>
            </div>
        </div>
        
        <!-- Card content -->
        <div class="pt-12 pb-6 px-6">
            <!-- Title and subtitle -->
            <div class="flex flex-col items-start justify-between md:mb-4 prose prose-xs md:prose-lg min-w-full prose-p:my-[10px]">
                <h1 class="!mb-2">{{ title }}</h1>
                <h2 class="text-gray-400 !mt-0 !mb-8">{{ description }}</h2>
            </div>

            {# Benefit types #}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 !mb-8">
                <!-- Bronze Tier -->
                <div class="card bg-base-200/50">
                    <div class="card-body items-center text-center">
                        <h2 class="card-title">Nível Bronze</h2>
                        <p>1,000 Karma Distribuído</p>
